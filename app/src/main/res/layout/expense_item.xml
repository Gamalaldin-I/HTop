<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:layout_margin="5dp"
    android:background="@drawable/bg_receipt"
    android:backgroundTint="#17C71135"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bussinessb"
        android:text="$250"
        android:textColor="@color/neon"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Day 20-7-2025"
        android:fontFamily="@font/bussinessb"
        android:textColor="@color/dark"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20:22"
        android:textColor="@color/code"
        android:textStyle="bold"
        android:fontFamily="@font/bussinessb"
        app:layout_constraintStart_toEndOf="@id/date"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/method"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Method: Cash"
        android:fontFamily="@font/bussinessb"
        android:textColor="@color/code"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/total" />

</androidx.constraintlayout.widget.ConstraintLayout>