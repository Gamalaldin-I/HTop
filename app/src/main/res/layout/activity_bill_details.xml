<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/main"
android:padding="20dp"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".ui.billDetails.BillDetailsActivity">
    <TextView
        android:id="@+id/billId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bussinessb"
        android:text="Bill ID: #dlsdk5$Is"
        android:textColor="@color/text_tertiary"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bussinessb"
        android:layout_marginTop="30sp"
        android:text="Date: 20-7-2025"
        android:textColor="@color/text_primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/billId" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bussinessb"
        android:text="Time: 10:12"
        android:textColor="@color/text_primary"
        app:layout_constraintStart_toStartOf="@+id/date"
        app:layout_constraintTop_toBottomOf="@+id/date" />

    <TextView
        android:id="@+id/beforeDis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bussinessb"
        android:text="250$"
        app:layout_constraintBottom_toBottomOf="@+id/time"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/billId" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bussinessb"
        android:text="@string/before_discount"
        android:textColor="@color/text_primary"
        app:layout_constraintBottom_toBottomOf="@+id/beforeDis"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/beforeDis" />

    <TextView
        android:id="@+id/disTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/discount"
        android:textColor="@color/text_primary"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/discount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25%"
        app:layout_constraintBottom_toBottomOf="@+id/disTitle"
        app:layout_constraintStart_toEndOf="@+id/disTitle"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/after"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/total_is"
        android:textSize="25sp"
        android:layout_marginTop="20dp"
        android:textColor="@color/text_primary"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/disTitle" />

    <TextView
        android:id="@+id/afterDiscount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="200$"
        android:textColor="@color/text_link"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/after"
        app:layout_constraintStart_toEndOf="@+id/after"
        app:layout_constraintTop_toTopOf="@+id/after" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/afterDiscount" />

    <TextView
        android:id="@+id/SaleDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/bussinessb"
        android:text="@string/sold_items"
        android:layout_marginEnd="30dp"
        android:textColor="@color/text_primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_done"
        app:layout_constraintBottom_toBottomOf="@+id/SaleDetails"
        app:layout_constraintStart_toEndOf="@+id/SaleDetails"
        app:layout_constraintTop_toTopOf="@+id/SaleDetails" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView2"
        android:layout_width="match_parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SaleDetails"
        tools:listitem="@layout/sold_item" />

</androidx.constraintlayout.widget.ConstraintLayout>