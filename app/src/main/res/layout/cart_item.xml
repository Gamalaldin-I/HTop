<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    app:cardCornerRadius="10dp"
    android:layout_margin="5dp"
    android:layout_height="wrap_content"
    android:background="@drawable/product_item_bg"
    android:padding="3dp"
    android:backgroundTint="@color/neutral_100"
    android:layoutDirection="ltr"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/productImg"
                android:layout_width="80dp"
                android:layout_height="0dp"
                app:riv_corner_radius="10dp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/cart_item_img" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="@+id/productImg"
                app:layout_constraintStart_toEndOf="@+id/productImg"
                app:layout_constraintTop_toTopOf="@+id/productImg">

                <TextView
                    android:id="@+id/productBrand"
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="@color/text_primary"
                    android:layout_height="wrap_content"
                    android:text="Brand : Zara"/>

                <TextView
                    android:id="@+id/productType"
                    android:layout_width="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/text_secondary"
                    android:layout_height="wrap_content"
                    android:text="t-shirt"/>

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_secondary"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:text="250"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/inc_dec_btn"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="@+id/productImg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/productImg">

                <ImageView
                    android:id="@+id/increment"
                    android:layout_width="30dp"
                    android:textStyle="bold"
                    android:background="@color/zxing_transparent"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_inc"
                    app:tint="@color/neutral_300" />

                <TextView
                    android:id="@+id/count"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:textColor="@color/primary_accent_blue"
                    android:textStyle="bold"
                    android:text="1" />

                <ImageView
                    android:id="@+id/decrement"
                    android:layout_width="30dp"
                    android:background="@color/zxing_transparent"
                    android:layout_height="30dp"
                    android:textStyle="bold"
                    android:src="@drawable/ic_dec"
                    app:tint="@color/neutral_300" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
