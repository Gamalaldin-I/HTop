<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/container"
    android:padding="20dp"
    android:layout_margin="5dp"
    android:background="@drawable/bg_receipt"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/pos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        app:layout_constraintBottom_toBottomOf="@+id/brandName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/brandName" />

    <TextView
        android:id="@+id/brandName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:textSize="15dp"
        android:fontFamily="@font/bussinessb"
        android:textColor="@color/text_primary"
        android:text="Zara (T-shirt)"
        app:layout_constraintBottom_toBottomOf="@+id/priceUnit"
        app:layout_constraintStart_toEndOf="@+id/pos"
        app:layout_constraintTop_toTopOf="@+id/priceUnit" />

    <TextView
        android:id="@+id/priceUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="200$"
        android:textColor="@color/text_primary"
        android:fontFamily="@font/bussinessb"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="5dp"
        android:background="#7A939292"
        app:layout_constraintTop_toBottomOf="@id/priceUnit"
        tools:layout_editor_absoluteX="20dp" />

    <TextView
        android:id="@+id/count"
        android:layout_width="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:text="Q: 2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2" />

    <TextView
        android:id="@+id/total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Total: 400$"
        android:textColor="@color/text_link"
        android:fontFamily="@font/bussinessb"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2" />
</androidx.constraintlayout.widget.ConstraintLayout>